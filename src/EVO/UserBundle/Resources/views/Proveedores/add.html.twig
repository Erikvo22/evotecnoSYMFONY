{% extends 'layout.html.twig' %}

{% block title %}Nuevos Proveedores {% endblock %}

{% block body %}
<meta charset="UTF-8" />

 <!--NOMBRE DE LA PÁGINA -->
<div class = "nombre">
<ul>
   <li><span class ="fa fa-truck"></span>Nuevo proveedor</li>
</ul>
</div>  


<!-- FORMULARIO -->

{{ parent() }}
<div class = "main container">
<div class = "row well">
<div class = "col-md-6">

{{ form_start(form, {'attr' :  {'novalidate' : 'novalidate',  'grupo' : 'form'}} )}}


<div class="form-group">
 {{ form_label(form.empresa) }}
 {{ form_widget(form.empresa, { 'attr' : {'class' : 'form-control'} }) }}
  <span class="text-danger">{{ form_errors(form.empresa) }}</span>
 </div>


<div class = "form-group">
<label>CIAL</label>
{{ form_widget(form.cial, {'attr' : {'class' : 'form-control'} } )}}
<span class = "text-danger">{{ form_errors(form.cial) }}</span>
</div>

<div class = "form-group">
<label>Dirección</label>
{{ form_widget(form.direccion, {'attr' : {'class' : 'form-control'} } )}}
<span class = "text-danger">{{ form_errors(form.direccion) }}</span>
</div>


<div class = "form-group">
<label>Teléfono</label>
{{ form_widget(form.telefono, {'attr' : {'class' : 'form-control'} } )}}
<span class = "text-danger">{{ form_errors(form.telefono) }}</span>
</div>


<div class = "form-group">
<label>Email</label>
{{ form_widget(form.email, {'attr' : {'class' : 'form-control'} } )}}
<span class = "text-danger">{{ form_errors(form.email) }}</span>
</div>


<div class = "form-group">
<label>Descripción</label>
{{ form_widget(form.descripcion, {'attr' : {'class' : 'form-control'} } )}}
<span class = "text-danger">{{ form_errors(form.descripcion) }}</span>
</div>




<p>
{{ form_widget(form.save, {'label': 'Registrar proveedor', 'attr': {'class' : 'btn btn-success'}}) }}
</p>


{{ form_end(form) }}
</div>
</div>
</div>


<STYLE TYPE="text/css" MEDIA=screen>

  .footer-distributed{ margin-top: 100px;  }
 
</STYLE>

{% endblock %}